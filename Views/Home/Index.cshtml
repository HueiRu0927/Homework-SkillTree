@model Homework_SkillTree.ViewModel.CategoryViewModel
@{
    ViewBag.Title = "Home Page";
}
<div class="well">
    <form class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.ListViewModel.Categories, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.EnumDropDownListFor(model => model.ListViewModel.Categories, new { @class = "form-control"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ListViewModel.Money, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.EditorFor(model => model.ListViewModel.Money, new { @class = "form-control", placeholder = "金額"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ListViewModel.Date, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.EditorFor(model => model.ListViewModel.Date, new { @class = "form-control", placeholder = "日期"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ListViewModel.Note,new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextAreaFor(model => model.ListViewModel.Note)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-10 col-sm-2">
                <button type="submit" class="btn btn-default">送出</button>
            </div>
        </div>
    </form>
</div>
<table class="table table-bordered table-hover">
    @Html.Partial("_CategoryList", Model.CategoryListViewModel)
</table>        