@model Homework_SkillTree.ViewModel.CategoryInputViewModel
@{
    ViewBag.Title = "Home Page";
}
<div class="well">
    <form class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Categories, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.EnumDropDownListFor(model => model.Categories, new { @class = "form-control"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Money, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Money, new { @class = "form-control", placeholder = "金額"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Date, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Date, new { @class = "form-control", placeholder = "日期"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Note,new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextAreaFor(model => model.Note)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-10 col-sm-2">
                <button type="submit" class="btn btn-default">送出</button>
            </div>
        </div>
    </form>
</div>
<table class="table table-bordered table-hover">
    @Html.Action("CategoryList")
</table>        