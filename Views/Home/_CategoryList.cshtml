@model Homework_SkillTree.Models.CategoryInputVM
@using Homework_SkillTree.Models;

@{
    List<CategoryInputVM> categoryListVM = (List<CategoryInputVM>)ViewBag.Category;
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">

            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>

            @for (var i = 0; i < categoryListVM.Count; i++)
            {
                <tr>
                    <td>@categoryListVM.ElementAt(i).id</td>
                    <td>@categoryListVM.ElementAt(i).Categories</td>
                    <td>@categoryListVM.ElementAt(i).Date</td>
                    <td>@categoryListVM.ElementAt(i).Money</td>
                </tr>
            }

        </table>
    </div>
</div>
