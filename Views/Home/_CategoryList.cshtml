@model Homework_SkillTree.Models.CategoryInputViewModel
@using Homework_SkillTree.Models;

@{
    List<CategoryInputViewModel> categoryListViewModel = (List<CategoryInputViewModel>)ViewBag.Category;
}

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">

            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>
            @{
                var i = 1;
                foreach (var item in categoryListViewModel)
                {
                    <tr>
                        <td>@(i++)</td>
                        <td>@item.Categories</td>
                        <td>@item.Date</td>
                        <td>@item.Money</td>
                    </tr>
                }
            }
            
        </table>
    </div>
</div>
